<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_alignLeft="@+id/list_avatar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Untitled Video"
        android:id="@+id/my_text_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/date_text"
        android:layout_below="@+id/my_text_view"
        android:layout_alignStart="@+id/my_text_view" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/time_text"
        android:layout_below="@+id/date_text"
        android:layout_alignStart="@+id/date_text" />

    <ImageButton
        android:id="@+id/delete_image"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:tint="@color/colorPrimaryDark"
        style="?android:attr/borderlessButtonStyle"/>

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/share_image"
        android:src="@drawable/ic_share_black_24dp"
        android:tint="@color/colorPrimaryDark"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/delete_image"
        android:layout_marginEnd="40dp" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:id="@+id/view_image"
        android:src="@drawable/ic_remove_red_eye_black_24dp"
        style="?android:attr/borderlessButtonStyle"
        android:tint="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/share_image"
        android:layout_marginEnd="37dp" />
</RelativeLayout>


</android.support.v7.widget.CardView>