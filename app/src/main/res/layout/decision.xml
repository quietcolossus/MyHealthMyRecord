<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_alignLeft="@+id/list_avatar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="Untitled Video"
        android:id="@+id/name_icon"
        android:textAppearance="?attr/textAppearanceListItem"
        android:src="@drawable/a"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Self"
        android:id="@+id/my_text_view"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/name_icon"
        android:layout_marginStart="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You - only you and no one else"
        android:id="@+id/date_text"
        android:layout_below="@+id/my_text_view"
        android:layout_alignStart="@+id/my_text_view" />

</RelativeLayout>

</android.support.v7.widget.CardView>
