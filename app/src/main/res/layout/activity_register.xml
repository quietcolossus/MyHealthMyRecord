<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.imdc.newp.RegisterActivity">

    <EditText
        android:id="@+id/userNameTextF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="54dp"
        android:layout_above="@+id/passwordTextF"
        android:layout_alignStart="@+id/passwordTextF"
        android:layout_marginBottom="19dp"
        android:layout_alignEnd="@+id/passwordTextF" />

    <EditText
        android:id="@+id/passwordTextF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userTypeSpinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-20dp"
        tools:layout_editor_absoluteY="136dp" />

    <Button
        android:id="@+id/registerSubmitButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="@string/register"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="364dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp" />

    <Spinner
        android:id="@+id/userTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerSubmitButton"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/passwordTextF"
        android:layout_marginBottom="41dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="259dp" />

</RelativeLayout>
