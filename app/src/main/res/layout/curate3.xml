        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="This video includes the following LOCATIONS:"
            android:textSize="20sp" />
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp">

                <ToggleButton
                    android:id="@+id/home_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_home"
                    android:textOff=" Home"
                    android:textOn=" Home"
                    android:textSize="20dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />

                <ToggleButton
                    android:id="@+id/workplace_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:drawableLeft="@drawable/ic_work"

                    android:textAlignment="textStart"
                    android:textOff=" Workplace"
                    android:textOn=" Workplace"
                    android:textSize="20dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
                <ToggleButton
                    android:id="@+id/school_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_school"
                    android:textOff=" School"
                    android:textOn=" School"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ToggleButton
                    android:id="@+id/outdoors_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_nature"
                    android:textOff=" Outdoors"
                    android:textOn=" Outdoors"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/indoors_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_indoors"
                    android:textOff=" Indoors"
                    android:textOn=" Indoors"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/institution_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_institution"
                    android:textOff=" Institution"
                    android:textOn=" Institution"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout></LinearLayout>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="This video includes the following types of ACTIVITIES:"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ToggleButton
                    android:id="@+id/leisure_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_leisure"
                    android:textOff=" Leisure/Play"
                    android:textOn=" Leisure/Play"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/working_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_working"
                    android:textOff=" At Work"
                    android:textOn=" At Work"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/chores_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_chores"
                    android:textOff=" Chores"
                    android:textOn=" Chores"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/food_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_food"
                    android:textOff=" Eating"
                    android:textOn=" Eating"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/></LinearLayout>

            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ToggleButton
                    android:id="@+id/travel_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_travel"
                    android:textOff=" Travel"
                    android:textOn=" Travel"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/exercise_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_exercise"
                    android:textOff=" Exercise"
                    android:textOn=" Exercise"
                    android:textSize="20dp" />
