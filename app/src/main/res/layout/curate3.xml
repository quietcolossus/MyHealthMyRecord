        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ToggleButton
                    android:id="@+id/family_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_family"
                    android:textOff=" My Family"
                    android:textOn=" My Family"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/friends_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_friends"
                    android:textOff=" My Friends"
                    android:textOn=" My Friends"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <ToggleButton
                    android:id="@+id/medical_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_hcp"
                    android:textOff=" My HCP Team"
                    android:textOn=" My HCP Team"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <ToggleButton
                    android:id="@+id/everyone_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_everyone"
                    android:textOff=" Everyone"
                    android:textOn=" Everyone"
                    android:textSize="20dp" />
                <Space
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </LinearLayout></LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



            <Button

                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Save and Submit"
                android:textSize="20dp"/>

        </LinearLayout>

