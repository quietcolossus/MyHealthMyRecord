<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/wordcloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Cloud"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linegraph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Word Cloud" />

    <TextView
        android:id="@+id/linegraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Line Graph"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Line Graph" />

    <TextView
        android:id="@+id/bargraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linegraph"
        tools:text="Bar Graph" />

</androidx.constraintlayout.widget.ConstraintLayout>